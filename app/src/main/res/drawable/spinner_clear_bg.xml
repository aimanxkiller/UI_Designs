<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="15dp"
                />
            <stroke
                android:color="#2B2B40"
                android:width="2dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:gravity="end"
        android:width="30dp"
        android:top="15dp"
        android:right="15dp"
        android:height="30dp">
        <bitmap android:src="@drawable/arrow_down"/>
    </item>
</layer-list>